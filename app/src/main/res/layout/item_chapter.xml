<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/textViewChapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter 10"
        android:textSize="16sp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJudulChapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hari Libur"
        android:textSize="14sp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChapter" />

    <TextView
        android:id="@+id/textViewWaktuChapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="21/09/2025"
        android:textSize="14sp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJudulChapter" />
</androidx.constraintlayout.widget.ConstraintLayout>