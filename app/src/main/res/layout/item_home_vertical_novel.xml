<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCoverNovelVertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageViewCoverNovelVerticalUpdate"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription=""
            app:layout_constraintEnd_toEndOf="@+id/cardViewCoverNovelVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewJudulNovelVerticalUpdate"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewCoverNovelVertical"
        app:layout_constraintStart_toStartOf="@+id/cardViewCoverNovelVertical"
        app:layout_constraintTop_toBottomOf="@+id/cardViewCoverNovelVertical" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNovelUpdateAtas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewCoverNovelVertical"
        app:layout_constraintStart_toStartOf="@+id/cardViewCoverNovelVertical"
        app:layout_constraintTop_toBottomOf="@+id/textViewJudulNovelVerticalUpdate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/cardViewCoverNovelVertical"
            app:layout_constraintStart_toStartOf="@+id/cardViewCoverNovelVertical"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCoverNovelVertical">

            <TextView
                android:id="@+id/textViewNovelChapterAtas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewNovelWaktuAtas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAlignment="textEnd" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNovelUpdateBawah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewNovelUpdateAtas"
        app:layout_constraintStart_toStartOf="@+id/cardViewNovelUpdateAtas"
        app:layout_constraintTop_toBottomOf="@+id/cardViewNovelUpdateAtas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/cardViewCoverNovelVertical"
            app:layout_constraintStart_toStartOf="@+id/cardViewCoverNovelVertical"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCoverNovelVertical">

            <TextView
                android:id="@+id/textViewNovelChapterBawah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewNovelWaktuBawah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>